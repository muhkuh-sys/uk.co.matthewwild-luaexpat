<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="org.muhkuh.lua-bit" default="install">
	<target name="install" description="install all components">
		<echo>org.muhkuh.lua-bit</echo>
		
		<sequential if:true="${install.os_arch.linux_i386}">
			<copy file="linux_i386/lua_plugins/luasql/mysql.so"      todir="${install.luaplugin}/luasql" />
			<copy file="linux_i386/lua_plugins/luasql/sqlite3.so"      todir="${install.luaplugin}/luasql" />
		</sequential>
		
		<sequential if:true="${install.os_arch.linux_x86_64}">
			<copy file="linux_x86_64/lua_plugins/luasql/mysql.so"    todir="${install.luaplugin}/luasql" />
			<copy file="linux_x86_64/lua_plugins/luasql/sqlite3.so"    todir="${install.luaplugin}/luasql" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_x86}">
			<copy file="windows_x86/lua_plugins/luasql/mysql.dll"    todir="${install.luaplugin}/luasql" />
			<copy file="windows_x86/lua_plugins/luasql/sqlite3.dll"    todir="${install.luaplugin}/luasql" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_amd64}">
			<copy file="windows_amd64/lua_plugins/luasql/mysql.dll"  todir="${install.luaplugin}/luasql" />
			<copy file="windows_amd64/lua_plugins/luasql/sqlite3.dll"  todir="${install.luaplugin}/luasql" />
		</sequential>
	</target>
</project>
